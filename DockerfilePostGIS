# Start from Ubuntu
FROM ubuntu:16.04

# Update packages
RUN apt update
RUN apt-get install -y software-properties-common wget
RUN add-apt-repository "deb http://apt.postgresql.org/pub/repos/apt/ xenial-pgdg main"
RUN wget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | apt-key add -
RUN apt update
RUN apt install -y postgresql-9.6 postgresql-contrib-9.6

# Install PostgreSQL
# RUN apt-get install -y postgresql postgresql-contrib

# Configure PostgreSQL to start at boot
RUN update-rc.d postgresql enable

# Start PostgreSQL
RUN service postgresql start

# Install PostGIS and GDAL
# RUN apt-get install -y software-properties-common
# RUN add-apt-repository ppa:ubuntugis/ubuntugis-unstable
# RUN apt-get update
# RUN apt-get install -y postgis postgis-scripts gdal-bin

# Switch user
USER postgres

# Start PostgreSQL
RUN /etc/init.d/postgresql start

# Allow connections
RUN echo "host all all 0.0.0.0/0 trust" >> /etc/postgresql/9.6/main/pg_hba.conf

# Allow external connections
RUN echo "listen_addresses='*'" >> /etc/postgresql/9.6/main/postgresql.conf

# Expose port
EXPOSE 5432

# Default command
CMD [ "/usr/lib/postgresql/9.6/bin/postgres", "-D", "/var/lib/postgresql/9.6/main", "-c", "config_file=/etc/postgresql/9.6/main/postgresql.conf" ]
